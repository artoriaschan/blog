.details-container
  display: block;
  position: relative;
  border-radius: 2px;
  margin: 1.6em 0;
  padding: 1.6em;
  background-color: #eee;

.custom-block
  &-title 
    font-weight 600
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right
  &.tip, &.warning, &.danger
    padding: .1rem 1.5rem;
    border-left-width: .5rem;
    border-left-style: solid;
    margin: 1rem 0;
    border-radius: 0.4rem;
  &.tip
    background-color: #f3f5f7;
    border-color: #42b983;
  &.warning
    background-color: rgba(255,229,100,.3);
    border-color: #e7c000;
    color: #6b5900;
  &.danger
    background-color: #ffe6e6;
    border-color: #c00;
    color: #4d0000;
  &.warning, &-title 
    color: #b29400;